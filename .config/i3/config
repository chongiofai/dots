# ~/i3/config
# encoding=utf-8

# alias
set $mod Mod4
set $esc Escape
set $enter Return
set $tab Tab
set $ctrl Control
set $shift Shift
set $alt Mod1

set $left h
set $down j
set $up k
set $right l
set $next n
set $previous p
set $recent b

set $mb1 button1  # left mouse button
set $mb2 button2  # middle mouse button
set $mb3 button3  # right mouse button
set $mb4 button4  # scroll wheel up
set $mb5 button5  # scroll wheel down
set $mb6 button6  # scroll wheel right
set $mb7 button7  # scroll wheel left

# output

## define output
set $op0 primary
set $op1 nonprimary

